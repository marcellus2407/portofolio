<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="12dp" />
                    <solid android:color="#80CACACA"/>
                </shape>
            </item>

            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape  android:shape="rectangle" >
                    <corners android:radius="10dp" />
                    <gradient
                        android:gradientRadius="1000"
                        android:startColor="#0E0E0E"
                        android:endColor="#80CACACA"
                        android:type="radial"/>
                    <stroke
                        android:width="2.5dp"
                        android:color="#6E6E6E"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp">
                <shape  android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <solid android:color="#CACACA"/>
                    <stroke
                        android:width="2.5dp"
                        android:color="#6E6E6E"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>