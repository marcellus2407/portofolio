<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutUsFragment"
        android:padding="15dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="15dp"/>
        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/map"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:paddingBottom="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/map"
            android:text="BlueDoll is the place where you can find all kinds of dolls here. In choosing a doll, we prioritize the quality of the doll. We have partnerships with doll makers around the world to meet customer needs in choosing dolls.. The dolls here use materials that are safe for children and babies so they can be comfortable playing with our dolls."
            android:id="@+id/description"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Vision"
            android:paddingTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/description"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/visionheader" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Be the best company that provides high quality dolls worldwide"
            app:layout_constraintTop_toBottomOf="@id/visionheader"
            android:id="@+id/visiondescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            app:layout_constraintTop_toBottomOf="@id/visiondescription"
            android:paddingTop="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/missionheader" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/missionheader"
            android:text="Reach even more customer \nKeep providing good quality Dolls"
            android:id="@+id/missiondescription"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/missiondescription"
            android:text="Contact Us"
            android:paddingTop="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/contactusheader"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/contactusheader"
            android:text="Email: filbertmarcellus24@gmail.com\nGitHub: https://github.com/marcellus2407/portofolio"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>



